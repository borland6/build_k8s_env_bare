ENV['VAGRANT_NO_PARALLEL'] = 'yes'

VAGRANT_BOX = "bento/ubuntu-20.04"
VAGRANT_BOX_VERSION = "202112.19.0"
CPUS_MASTER_NODE = 2
CPUS_WORKER_NODE = 1
MEMORY_MASTER_NODE = 3072
MEMORY_WORKER_NODE = 2048
WORKER_NODES_COUNT = 2

Vagrant.configure("2") do |config|

  config.vm.provision "shell", path: "bootstrap.sh"

  # Kubernetes Master Server
  config.vm.define "kmaster" do |node|
  
    node.vm.box               = VAGRANT_BOX
    node.vm.box_check_update  = false
    node.vm.box_version       = VAGRANT_BOX_VERSION
    node.vm.hostname          = "kmaster.example.com"

    node.vm.network "private_network", ip: "172.16.16.100"
  
    node.vm.provider "vmware_desktop" do |v|
      v.vmx["displayName"]    = "kmaster"
      v.vmx["memsize"]  = MEMORY_MASTER_NODE
      v.vmx["numvcpus"]    = CPUS_MASTER_NODE
    end
    
    #node.vm.network "private_network", ip: "192.168.80.100", :adapter => 1
    node.vm.provision "shell", path: "bootstrap_kmaster.sh"
  
  end


  # Kubernetes Worker Nodes
  (1..WORKER_NODES_COUNT).each do |i|

    config.vm.define "kworker#{i}" do |node|

      node.vm.box               = VAGRANT_BOX
      node.vm.box_check_update  = false
      node.vm.box_version       = VAGRANT_BOX_VERSION
      node.vm.hostname          = "kworker#{i}.example.com"

      node.vm.network "private_network", ip: "172.16.16.10#{i}"
    
      node.vm.provider "vmware_desktop" do |v|
        v.vmx["displayName"]    = "kworker#{i}"
        v.vmx["memsize"]  = MEMORY_WORKER_NODE
        v.vmx["numvcpus"]    = CPUS_WORKER_NODE
      end

      node.vm.provision "shell", path: "bootstrap_kworker.sh"

    end

  end

end
